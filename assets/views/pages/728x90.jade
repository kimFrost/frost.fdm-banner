extends ../master_banner

block append head

block append body

block append globalVars
	- bannerClasses += " banner--728x90";

block append content

	//div.banner__devinfo 728x90

	form.form.banner__content.form--theme2(name="bannerForm")
		div.grid--11.banner__logo
		div.grid--8
			div.grid--48
				include ../blocks/select_destination_from
			div.grid__wedge
			div.grid--48
				include ../blocks/select_destination_to
		div.grid--1
		div.grid--12
			div.grid--48
				div.grid--14
					div.form__label Udrejse:
				div.grid--22
					include ../blocks/select_departure_month
				div.grid--12.grid--spaceleft
					include ../blocks/select_departure_day
			div.grid__wedge
			div.grid--48
				div.grid--14
					div.form__label Hjemrejse:
				div.grid--22
					include ../blocks/select_return_month
				div.grid--12.grid--spaceleft
					include ../blocks/select_return_day
		div.grid--1
		div.grid--5
			div.grid--48
				include ../blocks/select_count_adults
			div.grid__wedge
			div.grid--48
				include ../blocks/select_count_children
		div.grid--1
		div.grid--9
			div.grid--48
				div#childHeadline.banner__attachment
					div.form__label Børnenes alder:
				div.grid--12.grid--spaceright
					include ../blocks/select_child_one_age
				div.grid--12.grid--spaceright
					include ../blocks/select_child_two_age
				div.grid--12.grid--spaceright
					include ../blocks/select_child_three_age
				div.grid--12
					include ../blocks/select_child_four_age
			div.grid__wedge
			div.grid--48
				input.form__button(type="button", value="Søg rejse", id="searchButton")